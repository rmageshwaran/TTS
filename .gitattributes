# Git attributes for TTS Virtual Microphone project

# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyi text eol=lf

# Configuration files
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.cfg text eol=lf
*.ini text eol=lf

# Documentation
*.md text eol=lf
*.rst text eol=lf
*.txt text eol=lf

# Audio files (binary)
*.wav binary
*.mp3 binary
*.ogg binary
*.flac binary
*.aac binary

# Model files (binary)
*.bin binary
*.ckpt binary
*.pkl binary
*.pth binary
*.safetensors binary

# Images (binary)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.bmp binary
*.ico binary

# Archives (binary)
*.zip binary
*.tar binary
*.gz binary
*.7z binary

# Exclude from exports
.gitattributes export-ignore
.gitignore export-ignore
docs/ export-ignore
tests/ export-ignore
*.md export-ignore